{
    "$schema": "./usr/schema/configs.schema.json",
    "$schemaVersion": "1.0",
    "root": "c:/flak",
    "autoStart": true,
    "autoUpdate": true,
    "serverMode": false,
    "service": [
        {
            "id": "php-8.4.6-nts-Win32-vs17-x64",
            "name": "PHP-8",
            "serviceName": "FastCGI",
            "type": "service",
            "version": "8.4.6-nts-vs17-x64",
            "port": 9003,
            "sha256": null,
            "autoStart": true,
            "homepage": "https://windows.php.net/download/",
            "url": "https://windows.php.net/downloads/releases/php-8.4.6-nts-Win32-vs17-x64.zip",
            "extractDir": "bin/php/php-8.4.6-nts-Win32-vs17-x64",
            "executable": "php-cgi.exe",
            "args": [
                "-b",
                "127.0.0.1:9003"
            ],
            "license": "PHP-3.01",
            "origin": "official"
        },
        {
            "id": "mysql-5.7.43-winx64",
            "name": "MYSQL-5",
            "version": "5.7.43",
            "port": 3306,
            "type": "database",
            "sha256": null,
            "autoStart": true,
            "homepage": "https://downloads.mysql.com/archives/community/",
            "url": "https://dev.mysql.com/get/Downloads/MySQL-5.7/mysql-5.7.43-winx64.zip",
            "executable": "bin/mysqld.exe",
            "extractDir": "bin/mysql/mysql-5.7.43-winx64",
            "dataDir": "data/mysql-5",
            "initialize": {
                "initDataFolder": [
                    "--console",
                    "--initialize",
                    "--user=mysql",
                    "--datadir=${dataDir}"
                ]
            },
            "args": [
                "--console",
                "--log_syslog=0",
                "--datadir=${dataDir}"
            ],
            "license": "GPL-2.0",
            "origin": "official"
        },
        {
            "id": "nginx-1.22.0",
            "name": "NGINX",
            "version": "1.22.0",
            "type": "server",
            "port": 80,
            "sha256": null,
            "autoStart": false,
            "homepage": "https://nginx.org/en/download.html",
            "url": "https://nginx.org/download/nginx-1.22.0.zip",
            "executable": "nginx.exe",
            "extractDir": "bin/nginx/nginx-1.22.0",
            "args": [
                "-c",
                "${root}/etc/nginx/nginx.conf"
            ],
            "license": "BSD-2-Clause",
            "origin": "official"
        },
        {
            "id": "httpd-2.4.65-250724-Win64-VS17",
            "version": "2.4.65",
            "name": "Apache",
            "autoStart": true,
            "type": "server",
            "sha256": null,
            "homepage": "https://www.apachelounge.com/download/  ",
            "url": "https://www.apachelounge.com/download/VS17/binaries/httpd-2.4.65-250724-Win64-VS17.zip",
            "executable": "httpd.exe",
            "extractDir": "bin/apache2/httpd-2.4.65-250724-Win64-VS17/bin",
            "args": [
                "-f",
                "${root}/etc/apache2/fcgid.conf"
            ],
            "license": "Apache-2.0",
            "origin": "official"
        }
    ]
}
